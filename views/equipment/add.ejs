<% layout('layouts/boilerplate') %>
<style>
    body{
        background-color: azure;
    }
</style>
<form action="/equipment" method="POST" class="card p-5">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" aria-describedby="productName">
      </div>
      <div class="mb-3">
        <label for="qty" class="form-label">Qty</label>
        <input type="number" class="form-control" id="qty" qty="name" aria-describedby="productName">
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="warehouse" id="warehouse" value="warehouse" checked>
        <label class="form-check-label" for="warehouse">
          Warehouse
        </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="on-site" id="on-site" value="on-site">
            <label class="form-check-label" for="on-site">
              On-Site
            </label>
            </div>
     <div class="form-check mb-4">
         <input class="form-check-input" type="checkbox" value="true" id="status" name="status">
         <label class="form-check-label" for="status">
             Operational
         </label>
         </div>
         <div class="mb-3">
            <button class="btn btn-primary w-25 position-absolute bottom-0 start-50 translate-middle">ADD</button>
         </div>
         
</form>